<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/book_list_detail_header_ll"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginBottom="10dp"
              android:background="@color/common_bg"
              android:orientation="vertical">

    <TextView
        android:id="@+id/book_list_detail_header_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:padding="15dp"
        android:textColor="@color/common_h1"
        android:textSize="18sp"
        tools:text="幽暗主宰"/>

    <TextView
        android:id="@+id/book_list_detail_header_desc_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:textColor="@color/common_h2"
        android:textSize="13sp"
        tools:text="开通包月，这些精品书就能免费阅读了"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <ImageView
            android:id="@+id/book_list_detail_header_author_avatar_iv"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_centerVertical="true"
            tools:src="@drawable/avatar_default"/>

        <TextView
            android:id="@+id/book_list_detail_header_create_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/book_list_detail_header_author_avatar_iv"
            android:textColor="@color/common_h2"
            android:textSize="15sp"
            tools:text="创建自 "/>

        <TextView
            android:id="@+id/book_list_detail_header_author_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/book_list_detail_header_create_iv"
            android:textColor="@color/light_coffee"
            android:textSize="15sp"
            tools:text="追书首席打杂"/>

        <TextView
            android:id="@+id/book_list_detail_header_share_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/shape_common_btn_selector"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:text="分享"
            android:textColor="@color/colorPrimary"/>
    </RelativeLayout>
</LinearLayout>